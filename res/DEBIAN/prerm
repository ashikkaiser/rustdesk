#!/bin/bash

set -e

case $1 in
    remove|upgrade)
		INITSYS=$(ls -al /proc/1/exe | awk -F' ' '{print $NF}' | awk -F'/' '{print $NF}')
		rm -f /usr/bin/cloudydesk
		
		if [ "systemd" == "${INITSYS}" ]; then

			systemctl stop cloudydesk || true
			systemctl disable cloudydesk || true
			rm /etc/systemd/system/cloudydesk.service /usr/lib/systemd/system/cloudydesk.service || true
			
			# workaround temp dev build between 1.1.9 and 1.2.0
			serverUser=$(ps -ef | grep -E 'cloudydesk +--server' | grep -v 'sudo ' | awk '{print $1}' | head -1)
			if [ "$serverUser" != "" ] && [ "$serverUser" != "root" ]
			then
				systemctl --machine=${serverUser}@.host --user stop cloudydesk >/dev/null 2>&1 || true
			fi
			rm /usr/lib/systemd/user/cloudydesk.service >/dev/null 2>&1 || true
		fi
        ;;
esac

exit 0
